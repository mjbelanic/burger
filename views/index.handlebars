<div class="container">
    <div class="text-center jumbotron">
        <h1>Eat - A - Burger</h1>
        <hr>
        <h3>Have a delicious burger or add your own.</h3>
    </div>
    <div class="row">
        <table class="col-sm-5">
            <tbody>
            {{#each burgers}}
                {{#unless this.devoured}}
                <tr>
                    <td>
                        <h4>{{this.burger_name}}</h4>
                    </td>
                    <td>    
                        <form action="/{{this.burger_name}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="false"/>
                            <button type="submit">Devour!</button>
                        </form>
                    </td>
                </tr>
                {{/unless}}
            {{/each}}
            </tbody>
        </table>
        <table class="col-sm-5 col-sm-offset-2">
            <tbody>
            {{#each burgers}}
                {{#if this.devoured}}
                <tr>
                    <td>
                        <h4>{{this.burger_name}}</h4>
                    </td>
                    <td>
                        <form action="/{{this.burger_name}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="true"/>
                            <button type="submit">Order Again!</button>
                        </form>
                    </td>
                </tr>
                {{/if}}
            {{/each}}
            </tbody>
        </table>
    </div>
    <hr>
    <div class="row">
        <form action="/" method="POST">
            <label for="burgerName">Burger Name:</label>
            <br/>
            <textarea type="text" name="burgerName" id="burgerName"></textarea>
            <button type="submit">Add Your Own Burger!</button>
        </form>
    </div>
</div>